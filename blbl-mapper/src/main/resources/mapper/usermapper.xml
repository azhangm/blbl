<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nuc.zm.mapper.UserMapper">
    <insert id="addUser" parameterType="nuc.zm.pojo.User" useGeneratedKeys="true" keyProperty="id">
            insert into t_user
            (phone,email,password,salt,createTime,updateTime)
        values  (
                #{phone},
                #{email},
                #{password},
                #{salt},
                #{createTime},
                #{updateTime}
                );
    </insert>
    <insert id="addUserInfo"  parameterType="nuc.zm.pojo.UserInfo">
        insert into t_user_info(
                userId,
                nick,
                avatar,
                sign,
                gender,
                brith,
                createTime,
                updateTime)
        values (
                #{userId},
                #{nick},
                #{avatar},
                #{sign},
                #{gender},
                #{brith},
                #{createTime},
                #{updateTime});
    </insert>

    <select id="getUserByPhone" parameterType="java.lang.String" resultType="nuc.zm.pojo.User">
        select *
        from t_user
        where phone = #{phone}
    </select>
    <select id="getUserByPassword" resultType="nuc.zm.pojo.User">
        select id
        from t_user
        where #
    </select>
</mapper>